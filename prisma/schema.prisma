generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType      = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id         Int        @id @default(autoincrement())
  title      String
  artist     String
  content    String
  key        String
  url_song   String?
  category   Category   @relation(fields: [categoryId], references: [id])
  categoryId Int
  misaSongs  MisaSong[]
  active     Boolean    @default(true)
  userId     Int?
  user       User?      @relation(fields: [userId], references: [id])

  @@map("songs")
}

model User {
  id          Int     @id @default(autoincrement())
  name        String
  email       String  @unique
  password    String
  role        Role    @relation(fields: [roleId], references: [id])
  roleId      Int
  phoneNumber String?
  misas       Misa[]
  songs       Song[]

  @@map("users")
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  users       User[]
  permissions Permission[]

  @@map("roles")
}

model Permission {
  id    Int    @id @default(autoincrement())
  name  String @unique
  roles Role[]

  @@map("permissions")
}

model Category {
  id       Int     @id @default(autoincrement())
  name     String
  songs    Song[]
  isSecret Boolean @default(false)

  @@map("categories")
}

model Misa {
  id         Int        @id @default(autoincrement())
  title      String
  dateCreate DateTime   @default(now())
  dateMisa   DateTime
  misaSongs  MisaSong[]
  visibility String     @default("PUBLIC")
  shareToken String?    @default(uuid())
  editToken  String?    @default(uuid())
  userId     Int?
  user       User?      @relation(fields: [userId], references: [id])

  @@map("misa")
}

model Moment {
  id        Int        @id @default(autoincrement())
  nombre    String     @unique @db.VarChar(50)
  misaSongs MisaSong[]

  @@map("moment")
}

model MisaSong {
  id       Int     @id @default(autoincrement())
  misa     Misa    @relation(fields: [misaId], references: [id], onDelete: Cascade)
  misaId   Int
  song     Song    @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId   Int
  moment   Moment? @relation(fields: [momentId], references: [id], onDelete: Cascade)
  momentId Int?
  key      String? @db.VarChar(10)

  @@map("missa_song")
}
